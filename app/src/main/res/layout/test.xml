<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorPrimary"
        android:gravity="center"><!--in linear only-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-60dp"
            android:src="@drawable/img1"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF0000"/><!--in can replace with img view but image must be rounded-->
    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:background="@drawable/backgroundrect"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="120dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign in"
            android:id="@+id/text_signup"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="enter email"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/edit1"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:inputType="text"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter passsword"
            android:textColorHint="@color/colorAccent"
            android:layout_below="@id/edit1"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/locked"
            android:drawablePadding="5dp"
            android:id="@+id/edit2"
            android:inputType="textPassword"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="sign in"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/edit2"
            android:layout_centerHorizontal="true"
            android:id="@+id/button1"
            android:background="@drawable/rectangle"
            android:onClick="click"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:textColor="@color/colorAccent"
            android:text="don't have account ?"
            android:layout_centerHorizontal="true"
            android:id="@+id/donot_have_account"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:text="sign up"
            android:id="@+id/sign_up"
            android:textColor="@color/color_blue"/>
    </RelativeLayout>

</RelativeLayout>