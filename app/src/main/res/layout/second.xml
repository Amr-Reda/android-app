<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="@string/MyName"
        android:textColor="@color/color_green"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/text1"
        android:src="@drawable/img1"
        android:scaleType="centerCrop"
        android:id="@+id/imgview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_centerInParent="true"
        android:text="MyName"
        android:textColor="@color/color_red"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:id="@+id/right"
        android:layout_toRightOf="@id/text2"
        android:layout_centerVertical="true"
        android:textColor="@color/color_secondary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:text="text3"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_orange"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text7"
        android:layout_centerHorizontal="true"
        android:id="@+id/edittext"
        android:hint="enter your name"
        android:textColorHint="@color/color_green"
        android:textColor="@color/colorAccent"
        android:inputType="text"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tet4"
        android:text="Text4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:text="Text5"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_sky"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text6"
    android:layout_above="@+id/text2"
    android:layout_centerHorizontal="true"
    android:text="Test"
    android:textColor="@color/color_red"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text7"
        android:text="blew"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text8"
        android:text="Right"
        android:layout_toLeftOf="@+id/text2"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELP"
        android:layout_toLeftOf="@id/text6"
        android:layout_above="@id/text8"
        android:textColor="@color/color_secondary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightBelow"
        android:text="HELP"
        android:layout_toRightOf="@id/text7"
        android:layout_below="@id/right"
        android:textColor="@color/color_red"/>
</RelativeLayout>